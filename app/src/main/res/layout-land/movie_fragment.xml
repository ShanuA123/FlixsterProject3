<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <TextView
        android:id="@+id/tv_MovieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testTitle"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_MovieDesc"
        app:layout_constraintStart_toEndOf="@+id/iv_MovieImage"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="150dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_MovieDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testDesrciption"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="15sp"
        android:textColor="#0033B5"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/iv_MovieImage"
        app:layout_constraintTop_toBottomOf="@+id/tv_MovieTitle"
        android:paddingRight="150dp"
        android:maxLines="6"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/iv_MovieImage"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>